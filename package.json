{
  "name": "@hirameki/vue-theme-provider",
  "version": "1.0.0",
  "description": "Theme provider utility to set CSS Class on HTML element based on user's system theme preference or selected theme. This does not provide visual themes, since it's up to you to define themes in your pipeline.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/author/library#readme",
  "bugs": {
    "url": "https://github.com/author/library/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/author/library.git"
  },
  "author": "Author Name <author.name@mail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.3.1",
    "happy-dom": "^20.0.10",
    "tsdown": "^0.16.0",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@^7.1.20",
    "vitest": "^4.0.7",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.3"
  },
  "dependencies": {
    "@vueuse/core": "^14.0.0"
  }
}
